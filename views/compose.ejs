<%- include("partials/header"); %>

<h1>COMPOSE</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input id="postTitle" type="text" name="postTitle" class="form-control" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="postContent">Content</label>
        <textarea type="text" id="postContent" name="postBody" rows="10" class="form-control"
            autocomplete="off"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); %>